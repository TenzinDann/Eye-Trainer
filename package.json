{
  "name": "vision-trainer-local",
  "private": true,
  "version": "0.1.0",
  "description": "Local web + desktop vision trainer clone",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "dev:desktop": "concurrently -k \"npm:dev\" \"npm:electron:dev\"",
    "electron:dev": "wait-on tcp:5173 && cross-env VITE_DEV_SERVER_URL=http://localhost:5173 electron .",
    "build:web": "vite build",
    "preview": "vite preview",
    "build:desktop": "npm run build:web && electron-builder -m",
    "pack:desktop": "npm run build:web && electron-builder --dir"
  },
  "dependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.3.3",
    "concurrently": "^8.2.2",
    "cross-env": "^7.0.3",
    "electron": "^31.7.7",
    "electron-builder": "^24.13.3",
    "vite": "^5.4.10",
    "wait-on": "^8.0.1"
  },
  "build": {
    "appId": "com.tenzin.visiontrainer",
    "productName": "Vision Trainer",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.healthcare-fitness",
      "target": [
        "dmg",
        "zip"
      ]
    }
  }
}
